# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{json,js,rb,sh,bash,yaml,yml,xml}]
indent_style = space
indent_size = 2

[*.{c,cc,cpp,h,hpp,cmake}]
indent_style = space
indent_size = 4

[CMakeLists.txt]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
